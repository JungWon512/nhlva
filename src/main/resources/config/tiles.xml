    <!-- 팝업 레이아웃 -->
    <definition name="popup-layout" template="/WEB-INF/tiles/layouts/front/popup/layout_popup.jsp">
        <put-attribute name="title" expression="AUCTION"/>
        <put-attribute name="body_footer_script" value="/WEB-INF/tiles/layouts/front/body_footer_script_base.jsp"/>
        <put-attribute name="content" value="/WEB-INF/tiles/layouts/front/content.jsp"/>
