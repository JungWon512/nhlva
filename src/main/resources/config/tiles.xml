        <put-attribute name="wrapper_header" value="/WEB-INF/tiles/layouts/front/wrapper_header_base.jsp"/>
    </definition>
    <definition name="popup-modal-layout" template="/WEB-INF/tiles/layouts/front/popup/layout_popup_modal.jsp">
        <put-attribute name="title" expression="AUCTION"/>
        <put-attribute name="content" value="/WEB-INF/tiles/layouts/front/content.jsp"/>
    </definition> 
     
     
    <definition name="common/auction/*" extends="popup-modal-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/auction/common/{1}.jsp"/>
    </definition>   
    <definition name="pop/modal/*" extends="popup-modal-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/pop/modal/{1}.jsp"/>
    </definition>
    <definition name="pop/modal/*/*" extends="popup-modal-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/pop/modal/{1}/{2}.jsp"/>
    </definition>
    <definition name="pop/*" extends="popup-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/pop/{1}.jsp"/>
        <put-attribute name="page_footer_script" value="/static/js/page/pop/{1}.js" />
    </definition>
    <definition name="auction/common/*" extends="popup-modal-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/auction/common/{1}.jsp"/>
    </definition>   
    <definition name="auction/*/*" extends="front-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/auction/{1}/{2}.jsp"/>
        <put-attribute name="page_footer_script" value="/static/js/page/auction/{1}/{2}.js" />
    </definition>
    <definition name="mypage/*/*" extends="front-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/mypage/{1}/{2}.jsp"/>
