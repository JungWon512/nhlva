        <put-attribute name="content" value="/WEB-INF/jsp/admin/{1}/{2}.jsp"/>
        <put-attribute name="page_footer_script" value="/static/js/page/admin/{1}/{2}.js" />
    </definition>       
    <definition name="admin/*/*/*" extends="admin-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/admin/{1}/{2}/{3}.jsp"/>
        <put-attribute name="page_footer_script" value="/static/js/page/admin/{1}/{2}/{3}.js" />
    </definition>
    
